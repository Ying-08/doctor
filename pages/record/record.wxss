.content {
  padding: 20px;
}

.record-item {
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 10px;
  padding: 15px;
  background-color: #ffffff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.diagnosis-text {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

.responsive-image {
  width: 100%;
  margin-top: 10px;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.clinical-data {
  margin-top: 10px;
}

.clinical-data view {
  margin-bottom: 5px;
  font-size: 14px;
  color: #333;
}
