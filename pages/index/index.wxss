/* index.wxss */
.container {
  padding: 20px;
}

.header button{
  position: absolute;
  top: 10px;
  right: 10px;
  width: 40px;
  padding: 2px;
  text-align: center;
}

.content {
  display: flex;
  justify-content: space-between;
  padding: 0 10px; /* 添加内边距以防止按钮超出容器边界 */
  /* margin-bottom: 20px; */
}

.content .action-button {
  flex: 1; /* 使按钮平分行宽 */
  margin: 0 5px; /* 添加外边距以保持按钮间距 */
  text-align: center;
  width: auto;
  border: none;
  border-radius: 5px;
}

.img{
  position: absolute;
  left: 10px;
  top: -80px;
  width: 50px;
  height: auto;
}

.img image{
  width: 80px;
}

.form {
  width: 100%;
  max-width: 500px;
  display: flex;
  flex-direction: column;
}

.form {
  width: 100%;
  max-width: 500px;
  display: flex;
  flex-direction: column;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

label {
  width: 170px; /* 可以根据需要调整宽度 */
  text-align: right;
  margin-right: 10px;
}

input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.label-text {
  flex: 0 0 150px; /* 固定标签的宽度 */
  text-align: left;
  margin-right: 2px;
}

/* 添加用于图片叠加的样式 */
.image-container {
  position: relative;
  width: 100%;
  min-height: 400px; /* 根据实际需要调整 */
  /* margin: 20px; */
}
.slider-container {
  width: 200px;
  text-align: center;
}


/* 响应式图片样式 */
.responsive-image {
  width: 100%;
  height: 100%;
}

.overlay-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* min-height: 600px; */
  opacity: 0.5; /* 调整透明度 */
}

.diagnosis-text {
  margin: 20px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #f9f9f9;
}

.toggle-container {
  display: flex;
  justify-content: center;
  margin: 10px 0;
}

.toggle-button {
  width: 90%; 
  padding: 10px;
  text-align: center;
  border: none;
  border-radius: 5px;
}

.image-container {
  position: relative;
  width: 100%;
  /* min-height: 600px;  */
  margin: 20px;
  padding-bottom: 30px;
}

.movable-area {
  width: 100%;
  height: 100%;
}

.movable-view {
  width: 100%;
  height: 100%;
}

.form-container {
  padding: 20px;
  max-width: 500px;
  margin: 0 auto;
}

.form-group {
  margin-bottom: 15px;
  display: flex;
  align-items: center;
}

.form-group text {
  width: 140px; 
  margin-right: 10px;
  line-height: 30px;
}

input, picker {
  flex: 1; 
  padding: 8px;
  height: 30px;
  line-height: 30px; 
}



